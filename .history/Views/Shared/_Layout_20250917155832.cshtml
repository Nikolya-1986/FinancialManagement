@using FinancialManagement.Helpers
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - FinancialManagement</title>
        <!-- Bootstrap CSS через CDN -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Ваши локальные стили с кэшбустингом -->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/FinancialManagement.styles.css" asp-append-version="true" />

        @RenderSection("Styles", required: false)
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <div>FinancialManagement</<div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark
                                    @(NavigationHelper.GeActiveClass(ViewContext, "Home", "Index"))"
                                    asp-controller="Home" asp-action="Index"
                                    >Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark
                                    @(NavigationHelper.GeActiveClass(ViewContext, "Home", "Privacy"))"
                                    asp-controller="Home" asp-action="Privacy"
                                    >Privacy
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link text-dark" style="padding:0; border:none; background:none;">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark
                                        @(NavigationHelper.GeActiveClass(ViewContext, "Account", "Login"))"
                                        asp-controller="Account" asp-action="Login"
                                        >Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark
                                        @(NavigationHelper.GeActiveClass(ViewContext, "Account", "Register"))"
                                        asp-controller="Account" asp-action="Register"
                                        >Register
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - FinancialManagement
            </div>
        </footer>
        @{
            var successMessage = TempData["SuccessMessage"] as string;

            var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors)
                .Where(e => !string.IsNullOrEmpty(e.ErrorMessage)).ToList();
        }
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="position-fixed top-0 end-0 p-3 toast-container" style="z-index: 1051;">
                <div id="successToast" class="toast show align-items-center text-bg-success border-0" 
                    role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            @successMessage
                        </div>
                        <button type="button"
                                class="btn-close btn-close-white me-2 m-auto" 
                                data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        @if (errors.Any())
        {
            <div class="position-fixed top-0 end-0 p-3 toast-container" style="z-index: 1051;">
                <div id="errorToast" class="toast show align-items-center text-bg-danger border-0" 
                    role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            @foreach (var err in errors)
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                        <button type="button"
                                class="btn-close btn-close-white me-2 m-auto" 
                                data-bs-dismiss="toast" aria-label="Close"
                                ></button>
                    </div>
                </div>
            </div>
        }

        <!-- JQuery (если нужен) -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap JS Bundle (popper + bootstrap.js) через CDN -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Ваш JS с кэшбустингом -->
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var successToast = document.getElementById('successToast');
                var errorToast = document.getElementById('errorToast');
                
                if (successToast) {
                    var toast = new bootstrap.Toast(successToast, { delay: 5000 });
                    toast.show();
                }

                if (errorToast) {
                    var toast = new bootstrap.Toast(errorToast, { delay: 5000 });
                    toast.show();
                }
            });
        </script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
