@model IEnumerable<FinancialManagement.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Users";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Users/Users.css" />
}

 <h2 class="text-center">@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Tariff</th>
            <th>Roles</th>
            <th>Delete</th>
            <th>Lock / <br/>Unlock</th>
            <th>Set roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            var rolesStr = user.Roles != null ? string.Join(", ", user.Roles) : "";
            var rolesDisplay = (user.Roles != null && user.Roles.Any())
                ? string.Join(", ", user.Roles)
                : "Roles not assigned";

            var roleClass = user.Roles != null && user.Roles.Any()
                ? user.Roles.First().ToLower() switch
                {
                    "admin" => "role-admin",
                    "manager" => "role-manager",
                    _ => "role-default"
                }
                : "role-default";
            
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Tariff</td>
                <td class="@roleClass">@rolesDisplay</td>
                <td>
                    <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Вы точно хотите удалить пользователя @user.Name?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" disabled="@user.IsBlocked">Delete</button>
                    </form>
                </td>
                <td>
                    <form asp-action="ToggleBlockUser" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn @(user.IsBlocked ? "btn-success" : "btn-warning") btn-sm">
                            @(user.IsBlocked ? "Unblock" : "Block")
                        </button>
                    </form>
                </td>
                <td>
                    <button href="#" onclick="openRolesModal('@user.Id', '@user.Roles')" class="btn btn-primary btn-sm"
                        disabled="@user.IsBlocked">
                        Change role
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("_UserRolesModal")