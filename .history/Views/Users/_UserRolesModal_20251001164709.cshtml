@using FinancialManagement.Data

@{
  var roles = Enum.GetValues(typeof(Role)).Cast<Role>();
}

<div class="modal fade" id="roleModal" tabindex="-1" aria-labelledby="roleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="roleModalLabel">Settings up roles</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><strong>User id:</strong> <span id="modalUserId"></span></p>
        <p><strong>Current roles:</strong> <span id="modalUserRole"></span></p>
        <label for="roleSelect" class="form-label">Select a new roles:</label>
        <select>
        </select id="roleSelect" class="form-select">
          @foreach(var role in roles)
          {
            <option value="@role">@role.ToString()</option>
          }
        </select>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="~/js/modals.js"></script>